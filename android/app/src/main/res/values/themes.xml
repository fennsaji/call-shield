<?xml version="1.0" encoding="utf-8"?>
<!--
    Base theme — Compose handles all UI; this only applies to the window/system chrome
    before Compose renders. Colors align with the Material 3 seed color defined in
    the Compose theme (CallShieldTheme).
-->
<resources>
    <!-- Splash screen theme — applied to MainActivity until installSplashScreen() swaps it -->
    <style name="Theme.CallShield.Starting" parent="Theme.SplashScreen">
        <!-- Deep navy background matching the app -->
        <item name="windowSplashScreenBackground">#0A0F1E</item>
        <!-- Logo icon centered on the splash -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_splash_logo</item>
        <!-- Icon background circle color — matches logo_dark.png background -->
        <item name="windowSplashScreenIconBackgroundColor">#0A0F1E</item>
        <!-- Transition to full app theme after splash -->
        <item name="postSplashScreenTheme">@style/Theme.CallShield</item>
    </style>

    <style name="Theme.CallShield" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Window background matches Compose surface color to avoid flash -->
        <item name="android:windowBackground">@color/window_background</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>
</resources>
