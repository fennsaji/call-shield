    <!-- DND Management -->
    <string name="dnd_title">DND Management</string>
    <string name="dnd_home_desc">Block promotional calls &amp; SMS from registered telemarketers via India\'s national DND registry</string>
    <string name="dnd_section_full">Block All Promotional Calls &amp; SMS</string>
    <string name="dnd_full_desc">Blocks all promotional calls and SMS, including from brands you signed up with. OTPs, bank alerts, and delivery updates always come through.</string>
    <string name="dnd_full_warning">This also blocks service messages from brands you explicitly opted into — such as newsletters or loyalty programs you signed up for.</string>
    <string name="dnd_section_promo">Block Unsolicited Promotions Only</string>
    <string name="dnd_promo_desc">Blocks spam promotional messages only. Brands you explicitly signed up with (newsletters, loyalty programs) can still reach you.</string>
    <string name="dnd_activate_promo">Block Promotional</string>
    <string name="dnd_section_partial">Block Specific Categories</string>
    <string name="dnd_partial_desc">Check the categories you want to block. Everything else will still be delivered.</string>
    <string name="dnd_activate_full">Activate Full DND</string>
    <string name="dnd_activate_partial">Block selected categories</string>
    <string name="dnd_deactivate">Deactivate DND (UNBLOCK ALL)</string>
    <string name="dnd_deactivate_short">Deactivate DND</string>
    <string name="dnd_call_1909">Call 1909 to Check Status</string>
    <string name="dnd_ivr_info">To check your current DND status, call 1909 (toll-free) and follow the IVR — STATUS via SMS is not supported by operators.</string>
    <string name="dnd_mark_confirmed">Mark as Confirmed</string>
    <string name="dnd_info">DND only covers registered telemarketers. Scam calls from random or VoIP numbers bypass it — CallShield handles those separately.</string>
    <string name="dnd_disclaimer">Tapping opens your SMS app with the command pre-filled. Send it to apply. TRAI confirms within 24 hours via SMS.</string>
