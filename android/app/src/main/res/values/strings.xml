    <!-- Onboarding -->
    <string name="onboarding_title_1">Stop spam calls before they ring</string>
    <string name="onboarding_body_1">CallShield silently checks every incoming call against a crowdsourced database of known spam numbers — before your phone rings.</string>
    <string name="onboarding_title_2">Your privacy is non-negotiable</string>
    <string name="onboarding_body_2">We never see your contacts or call log. Numbers are one-way hashed before any check. Nothing leaves your phone in plain text.</string>
