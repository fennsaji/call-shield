<?xml version="1.0" encoding="utf-8"?>
<!--
    Debug manifest overlay â€” merged on top of src/main/AndroidManifest.xml.
    Adds:
      1. networkSecurityConfig so cleartext HTTP to local IPs is permitted in debug builds.
      2. Play Billing Lab override tags (requires billing-ktx 7.1.1+).
         - NONPRODUCTION: prevents these tags from shipping in release builds.
         - enableBillingOverridesTesting: enables Play Billing Lab to simulate error codes
           and force subscription state transitions (grace period, account hold, etc.).
-->
<manifest xmlns:android="http://schemas.android.com/apk/res/android">
    <application
        android:networkSecurityConfig="@xml/network_security_config">

        <!-- Play Billing Lab: simulate error codes and subscription state transitions -->
        <meta-data
            android:name="com.google.android.play.largest_release_audience.NONPRODUCTION"
            android:value="" />
        <meta-data
            android:name="com.google.android.play.billingclient.enableBillingOverridesTesting"
            android:value="true" />

    </application>
</manifest>
